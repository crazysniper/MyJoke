<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    android:orientation="vertical"
    tools:context="com.myjoke.ui.activity.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="启动模式"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

        <!--<application.baseview.edittext.InputMoneyEditTextView-->
        <!--android:id="@+id/ed_money"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="80dp"-->
        <!--android:focusable="true"-->
        <!--android:hint="0"-->
        <!--android:textSize="24sp" />-->

        <Button
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="自定义控件"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="12345"
            android:hint="测试" />

        <Button
            android:id="@+id/recyclerModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="跳转到RecyclerView Module"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/supportDesignModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="跳转到SupportDesign Module"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/sysModule"
            style="@style/ButtonStyle"
            android:text="跳转到获取系统信息Module" />

        <Button
            android:id="@+id/dialogModule"
            style="@style/ButtonStyle"
            android:text="跳转到DialogModule" />


        <Button
            android:id="@+id/scrollerModule"
            style="@style/ButtonStyle"
            android:text="跳转到ScrollerModule" />
    </LinearLayout>

</ScrollView>
