<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.NotificationMainActivity">

    <Button
        android:id="@+id/notificationCompat"
        style="@style/ButtonStyle"
        android:text="打开NotificationCompat" />


    <Button
        android:id="@+id/removeNotificationCompat"
        style="@style/ButtonStyle"
        android:text="关闭NotificationCompat" />

    <Button
        android:id="@+id/removeAll"
        style="@style/ButtonStyle"
        android:text="清除所有" />


    <Button
        android:id="@+id/removeNotificationChannel"
        style="@style/ButtonStyle"
        android:text="删除渠道" />

    <Button
        android:id="@+id/removeNotificationChannelGroup"
        style="@style/ButtonStyle"
        android:text="删除渠道组" />


    <Button
        android:id="@+id/createNotificationChannel"
        style="@style/ButtonStyle"
        android:text="创建了两个通知渠道" />

    <Button
        style="@style/ButtonStyle"
        android:onClick="sendChatMsg"
        android:text="发送聊天消息" />

    <Button
        style="@style/ButtonStyle"
        android:onClick="sendSubscribeMsg"
        android:text="发送订阅消息" />

</LinearLayout>