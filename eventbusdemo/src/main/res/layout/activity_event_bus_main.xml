<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.EventBusMainActivity">

    <Button
        android:id="@+id/eventBus"
        style="@style/ButtonStyle"
        android:text="跳转到EventBus" />

    <application.baseview.layout.MyLinearView
        android:id="@+id/main"
        style="@style/EventBus_MyLinearView"
        app:leftText="Main" />

    <application.baseview.layout.MyLinearView
        android:id="@+id/background"
        style="@style/EventBus_MyLinearView"
        app:leftText="BACKGROUND" />

    <application.baseview.layout.MyLinearView
        android:id="@+id/mainOrdered"
        style="@style/EventBus_MyLinearView"
        app:leftText="MAIN_ORDERED" />

    <application.baseview.layout.MyLinearView
        android:id="@+id/posting"
        style="@style/EventBus_MyLinearView"
        app:leftText="POSTING" />

    <application.baseview.layout.MyLinearView
        android:id="@+id/async"
        style="@style/EventBus_MyLinearView"
        app:leftText="ASYNC" />

</LinearLayout>