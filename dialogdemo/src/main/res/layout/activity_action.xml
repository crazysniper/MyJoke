<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="application.dialogdemo.ui.ActionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/openSetting"
            style="@style/ButtonStyle"
            android:text="打开设置" />

        <Button
            android:id="@+id/openSelfSetting"
            style="@style/ButtonStyle"
            android:text="打开本应用基础信息设置" />

        <Button
            android:id="@+id/openSelfPermissionSetting"
            style="@style/ButtonStyle"
            android:text="打开本应用权限设置" />

        <Button
            android:id="@+id/openWifiSetting"
            style="@style/ButtonStyle"
            android:text="打开Wifi设置" />

        <Button
            android:id="@+id/ACTION_VIEW"
            style="@style/ButtonStyle"
            android:text="打开浏览器" />

        <Button
            android:id="@+id/CALL_PHONE"
            style="@style/ButtonStyle"
            android:text="呼叫指定的电话号码" />

        <Button
            android:id="@+id/ACTION_DIAL"
            style="@style/ButtonStyle"
            android:text="调用拨号面板" />

        <Button
            android:id="@+id/market"
            style="@style/ButtonStyle"
            android:text="打开妈妈社区应用市场" />

        <Button
            android:id="@+id/openMM"
            style="@style/ButtonStyle"
            android:text="打开妈妈社区" />

        <Button
            android:id="@+id/checkApp"
            style="@style/ButtonStyle"
            android:text="检测app有没有安装" />
    </LinearLayout>

</ScrollView>

